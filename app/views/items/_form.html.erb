
 <div class="col-md-12 new-item">
   <%= form_for [current_user, item], remote: true do |f| %>
     <div class="form-group">
       <%= f.label "Add an Item" %>
       <%= f.text_field :name, class: 'form-control', placeholder: "Enter item name" %>
     </div>
     <div class="form-group">
       <%= f.submit "Add Item", class: 'btn btn-success' %>
     </div>
   <% end %>
 </div>
